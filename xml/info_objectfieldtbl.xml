<?xml version="1.0" standalone="yes"?>
<tablecfg>   
    <table name="info_objectfieldtbl">
        <chnname>单元模块表字段</chnname>
        <listfieldcount>7</listfieldcount> <!--max_disp_cols_in_list-->
        <since>20120703</since>
        <creator>Wadelau</creator>
        <!-- <relatedref>更新模块列表::extra/updateobjecttbl.php?isheader=0</relatedref> -->
        <trigger>ALL::extraact::act/synctblfield.php</trigger>
    </table>

    <field name="fieldname">
        <chnname>字段名称</chnname>
        <memo>只能用英文/拼音字符, 写错了只能删去再新加</memo>
    </field>
    
    <field name="fieldtype">
        <chnname>字段类型</chnname>
        <selectoption>char:char|int:int|date:date|tinyint:tinyint|mediumint:mediumint|bigint:bigint|datetime:datetime|year:year</selectoption>
    </field>
    
    <field name="fieldlength">
        <chnname>字段长度</chnname>
    </field>
    
    <field name="defaultvalue">
        <chnname>字段默认值</chnname>
    </field>

    <field name="otherset">
        <chnname>其他设置</chnname>
        <selectoption>auto_increment:auto_increment|current_timestamp:current_timestamp</selectoption>
    </field>

    <field name="chnname">
        <chnname>字段中文名</chnname>
    </field>

    <field name="fieldmemo">
        <chnname>字段说明</chnname>
    </field>

    <field name="parentid">
        <chnname>单元模块ID</chnname>
        <selectoption>fromtable::info_objecttbl::tblname</selectoption>
        <readonly>1</readonly>
    </field>

    <field name="updatetime">
        <chnname>更新时间</chnname>
    </field>

    <field name="operator">
        <chnname>操作人</chnname>
    </field>
    

</tablecfg>
