<?xml version="1.0" standalone="yes"?>
<tablecfg>   
    <table name="hss_useraccesstbl">
        <chnname>系统权限</chnname>
        <listfieldcount>7</listfieldcount> <!--max_disp_cols-->
        <since>20120131</since>
        <creator>sunlit</creator>
        <relatedref>读取模块字段::JS::fillSubSelect('objectid','objectfield','xiane','./extra/readtblfield.php')</relatedref>
    </table>

        <field name="usergroup">
            <chnname>用户组</chnname>
            <inputtype>select</inputtype>
            <selectoption>fromtable:hss_info_grouptbl:groupname</selectoption>
        </field>

        <field name="userid">
            <chnname>用户名</chnname>
            <inputtype>select</inputtype>
            <selectoption>fromtable:hss_info_usertbl:realname</selectoption>
        </field>
        <field name="objectgroup" type="text">
            <chnname>单元模块组</chnname>
            <inputtype>select</inputtype>
            <selectoption>fromtable:hss_info_objectgrouptbl:groupname</selectoption>
        </field>

        <field name="objectid" type="text">
            <chnname>单元模块</chnname>
            <inputtype>select</inputtype>
            <selectoption>fromtable:hss_info_objecttbl:objname</selectoption>
            <jsaction>onchange::fillSubSelect('objectid','objectfield','xiane','./extra/readtblfield.php')</jsaction>
        </field>
        <field name="objectfield">
            <chnname>模块字段</chnname>
            <selectoption>:请选择</selectoption>
            <selectmultiple>1</selectmultiple>
            <delayjsaction>onload::3::fillSubSelect('objectid','objectfield','xiane','./extra/readtblfield.php')</delayjsaction>
        </field>


        <field name="accesstype" type="text">
            <chnname>访问权限</chnname>
            <inputtype>select</inputtype>
            <selectoption>0:不许访问|1:只读|2:读写|3:读写删</selectoption>
        </field>

        <field name="state">
            <chnname>状态</chnname>
            <selectoption>0:停用|1:正常</selectoption>
        </field>

        
        <field name="memo" type="text">
        <chnname>备注</chnname>
        </field>

        <field name="updatetime" type="text">
            <chnname>更新时间</chnname>
        </field>
        <field name="operator" type="text">
            <chnname>操作人</chnname>
        </field>
        <field name="operatelog" type="text">
                    <chnname>操作日志</chnname>
                            </field>

</tablecfg>
