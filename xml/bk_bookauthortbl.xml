<?xml version="1.0" standalone="yes"?>
<tablecfg>   
    <table name="bk_bookauthortbl">
        <chnname>书刊作者</chnname>
        <listfieldcount>8</listfieldcount> <!--max_disp_cols-->
        <since>20141130</since>
        <creator>Xenxin</creator>
		<readonly>1</readonly>	
    </table>	

        <field name="authorid" type="text">
            <chnname>作者</chnname>
			<inputtype>select</inputtype>
            <selectoption>fromtable::bk_authortbl::iname::istate>0</selectoption>
        </field>	

        <field name="iserial" type="text">
            <chnname>作者序次</chnname>
        </field>

	   <field name="bookid">
            <chnname>书名</chnname>
            <inputtype>select</inputtype>
            <selectoption>fromtable::bk_booktbl::ititle,ivolume::id>0</selectoption>
			<listview>1</listview>
        </field>
		
        <field name="chapterid">
            <chnname>章节</chnname>
			<inputtype>select</inputtype>
            <selectoption>fromtable::bk_chaptertbl::ctitle::id>0</selectoption>
        </field>

        <field name="inserttime" type="text">
            <chnname>更新时间</chnname>
			<listview>2</listview> <!-- force display-->
        </field>

     
        <field name="istate">
            <chnname>状态</chnname>
			<inputtype>select</inputtype>
			<selectoption>1:正常|0:停用</selectoption>
        </field>

        <field name="op" type="text">
            <chnname>操作人</chnname>
        </field>


</tablecfg>
