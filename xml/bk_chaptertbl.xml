<?xml version="1.0" standalone="yes"?>
<tablecfg>   
    <table name="bk_chaptertbl">
        <chnname>书刊章节列表</chnname>
        <listfieldcount>8</listfieldcount> <!--max_disp_cols-->
        <since>20141129</since>
        <creator>Xenxin</creator>
		<readonly>1</readonly>	
    </table>

        <field name="iserial">
            <chnname>章节次序</chnname>
			<listview>2</listview>
        </field>

        <field name="sectionid">
            <chnname>篇部</chnname>
            <inputtype>select</inputtype>
            <selectoption>fromtable::bk_sectionnametbl::iname::id>0</selectoption>
        </field>

        <field name="ctitle" type="text">
            <chnname>章节名称</chnname>
			<!-- <href>javascript:doActionEx('jdo.php?tbl=bk_chaptertbl&amp;act=view&amp;tit=&amp;db=&amp;bookid=THIS_bookid&amp;id=THIS_id','')::展开::</href> -->
        </field>	

        <field name="contentid">
            <chnname>内容</chnname>
			<!-- <href>./ido.php::tbl='bk_contenttbl',parent='chapterid',chapterid=THIS_id::展开::blank=2</href> -->
        	<extrainput>extra/linktbl.php?tbl=bk_contenttbl&amp;linkfield=chapterid&amp;pnskbookid=THIS_bookid&amp;pnsm=and</extrainput>
			<listview>0</listview>
			<memo>此项由子窗口自动生成</memo>
        </field>

        <field name="cstate" type="text">
            <chnname>编辑状态</chnname>
            <inputtype>select</inputtype>
            <selectoption>fromtable::bk_chapterstatetbl::statename::id>0 order by iserial</selectoption> <!-- be careful! -->
        </field>

        <field name="cauthor">
            <chnname>作者</chnname>
        	<extrainput>extra/linktbl.php?tbl=bk_bookauthortbl&amp;linkfield=chapterid&amp;pnskbookid=THIS_bookid&amp;pnskchapterid=THIS_id&amp;pnsm=1</extrainput>
			<memo>此项由子窗口自动生成, 请在子窗口编辑，然后将子窗口关闭</memo>
        </field>

        <field name="ceditor">
            <chnname>责任编辑</chnname>
        	<extrainput>extra/linktbl.php?tbl=bk_bookeditortbl&amp;linkfield=chapterid&amp;pnskbookid=THIS_bookid&amp;pnskchapterid=THIS_id&amp;pnsm=1</extrainput>
			<memo>此项由子窗口自动生成</memo>
        </field>

		<field name="iabstract">
			<chnname>摘要</chnname>
			<inputtype>textarea</inputtype>
			<singlerow>1</singlerow>
			<listview>0</listview>
		</field>

		<field name="imemo">
			<chnname>备注</chnname>
			<inputtype>text</inputtype>
			<listview>0</listview>
		</field>

        <field name="inserttime" type="text">
            <chnname>更新时间</chnname>
			<listview>2</listview>
        </field>

        <field name="bookid">
            <chnname>书名</chnname>
            <inputtype>select</inputtype>
            <selectoption>fromtable::bk_booktbl::ititle,ivolume::id>0</selectoption>
        </field>

        <field name="op" type="text">
            <chnname>操作人</chnname>
        </field>


</tablecfg>
