<?xml version="1.0" standalone="yes"?>
<tablecfg>   
    <table name="bk_contenttbl">
        <chnname>书刊章节内容</chnname>
        <listfieldcount>8</listfieldcount> <!--max_disp_cols-->
        <since>20141129</since>
        <creator>Xenxin</creator>
		<readonly>1</readonly>	
    </table>	

        <field name="filename" type="text">
            <chnname>文件名</chnname>
			<memo>自动读取内容文件的名称</memo>
        </field>	

        <field name="filepath" type="text">
            <chnname>内容文件</chnname>
			<inputtype>file</inputtype>
        </field>

        <field name="iversion">
            <chnname>内容版本</chnname>
			<!-- <href>./ido.php::tbl='bk_contenttbl',parent='chapterid',chapterid=THIS_id::展开::blank=2</href> -->
			<inputtype>select</inputtype>
            <selectoption>fromtable::bk_chapterstatetbl::statename::id>0 order by iserial</selectoption>
        </field>

        <field name="istate" type="text">
            <chnname>状态</chnname>
            <inputtype>select</inputtype>
            <selectoption>1:正常|0:停用</selectoption>
        </field>

        <field name="chapterid">
            <chnname>章节</chnname>
			<inputtype>select</inputtype>
            <selectoption>fromtable::bk_chaptertbl::ctitle::id>0</selectoption>
        </field>

        <field name="inserttime" type="text">
            <chnname>更新时间</chnname>
			<listview>2</listview> <!-- force display-->
        </field>

        <field name="bookid">
            <chnname>书名</chnname>
            <inputtype>select</inputtype>
            <selectoption>fromtable::bk_booktbl::ititle,ivolume::id>0</selectoption>
			<listview>0</listview>
        </field>

        <field name="op" type="text">
            <chnname>操作人</chnname>
        </field>


</tablecfg>
